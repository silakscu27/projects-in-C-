#include <stdio.h>

 int main()
 {
 int radius; 

 printf( "Input the circle radius: " ); 
 scanf( "%d", &radius ); 

 /* calculate and output diameter, circumference and area */
 
 printf( "\nThe diameter is %d\n", 2 * radius );
 printf( "The circumference is %.2f\n", 2 * 3.14159 * radius );
 printf( "The area is %.2f\n", 3.14159 * radius * radius );

 return 0; 
 }
