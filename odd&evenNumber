#include <stdio.h>

 int main()
 {
 int number; 

 printf( "Input an integer: " );
 scanf( "%d", &number ); 

 /* test if integer is even */
 if ( number % 2 == 0 ) {
 printf( "%d is an even integer\n", number );
 } 

 /* test if integer is odd */
 if ( number % 2 != 0 ) {
 printf( "%d is an odd integer\n", number );
 } 

 return 0; 

 }
